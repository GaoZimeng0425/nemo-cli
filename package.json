{
  "name": "nemo-cli",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "author": "gaozimeng <gaozimeng0425@gmail.com>",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "format": "biome format --write",
    "coverage": "vitest run --coverage",
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm run -r --parallel dev",
    "build": "pnpm run -r --parallel build",
    "build-dts": "pnpm run -r --parallel build-dts",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "sea": "node --experimental-sea-config sea-config.json"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.5.0",
    "@typescript/native-preview": "7.0.0-dev.20250916.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "rolldown": "1.0.0-beta.38",
    "rolldown-plugin-dts": "^0.16.5",
    "tsdown": "^0.15.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@slack/web-api": "^7.10.0",
    "dotenv": "^17.2.2",
    "es-toolkit": "^1.39.10",
    "superjson": "^2.2.2",
    "unconfig": "^7.3.3",
    "zod": "^4.1.8",
    "zod-validation-error": "^4.0.1"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --files-ignore-unknown=true"
    ]
  }

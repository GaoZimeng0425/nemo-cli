{
  "name": "nemo-cli",
  "version": "0.1.3",
  "description": "",
  "keywords": [],
  "author": "gaozimeng <gaozimeng0425@gmail.com>",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "start": "pnpm run -r --parallel start",
    "format": "biome format --write",
    "coverage": "vitest run --coverage",
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm run -r --parallel dev",
    "dev:email": "pnpm run --filter=@nemo-cli/mail dev:email",
    "dev:slack": "pnpm run --filter=@nemo-cli/ai dev:slack",
    "build": "pnpm run -r --parallel build",
    "check": "pnpm run -r --parallel check",
    "build-dts": "pnpm run -r --parallel build-dts",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "compile": "tsc --noEmit",
    "sea": "node --experimental-sea-config sea-config.json",
    "knip": "knip",
    "release": "tsx scripts/release.ts",
    "release:dry": "tsx scripts/release.ts --dry-run"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@nemo-cli/shared": "workspace:*",
    "@types/node": "^25.2.0",
    "husky": "^9.1.7",
    "knip": "^5.83.0",
    "lint-staged": "^16.2.7",
    "rolldown": "1.0.0-rc.2",
    "rolldown-plugin-dts": "^0.21.9",
    "tsdown": "0.20.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@slack/bolt": "^4.6.0",
    "@slack/web-api": "^7.13.0",
    "arktype": "^2.1.29",
    "dependency-cruiser": "^17.3.7",
    "dotenv": "^17.2.3",
    "es-toolkit": "^1.44.0",
    "superjson": "^2.2.6",
    "unconfig": "^7.4.2",
    "zod": "^4.3.6",
    "zod-validation-error": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --staged"
    ]
  }
}

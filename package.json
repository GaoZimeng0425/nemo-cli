{
  "name": "nemo-cli",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "author": "gaozimeng <gaozimeng0425@gmail.com>",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "coverage": "vitest run --coverage",
    "graph": "nx graph",
    "preinstall": "npx only-allow pnpm",
    "dev": "concurrently 'pnpm --filter=!./packages/shared dev' 'pnpm --filter=./packages/shared dev'",
    "build": "nx run-many --target=build --batch=true --all --parallel",
    "build-dts": "nx run-many --target=build-dts --batch=true --all --parallel",
    "dev_": "nx run-many --target=dev --batch=true --all --parallel",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "lint": "lint-staged"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.1.0",
    "concurrently": "^9.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "nx": "21.3.11",
    "rolldown": "1.0.0-beta.30",
    "rolldown-plugin-dts": "^0.15.1",
    "tsdown": "^0.13.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "es-toolkit": "^1.39.8",
    "unconfig": "^7.3.2"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --files-ignore-unknown=true"
    ]
  }
}
